{
  "name": "netcap-mcp",
  "version": "1.0.0",
  "description": "MCP server for HTTP and WebSocket network capture using mockttp",
  "main": "src/index.ts",
  "bin": {
    "netcap-mcp": "./src/index.ts"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:nodemon": "nodemon",
    "start": "NODE_OPTIONS=\"--trace-deprecation\" tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "postinstall": "node scripts/generate-certs.js",
    "generate-certs": "node scripts/generate-certs.js",
    "validate-db": "tsx scripts/dev-db-validator.ts",
    "validate-db:all": "tsx scripts/dev-db-validator.ts --all",
    "test-mcp-tools": "tsx scripts/mcp-tool-tester.ts",
    "test-protocol-filter": "tsx scripts/test-protocol-filter.ts",
    "dev-validate": "tsx scripts/dev-db-validator.ts --all && tsx scripts/mcp-tool-tester.ts"
  },
  "keywords": [
    "mcp",
    "netcap",
    "network",
    "capture",
    "http",
    "websocket",
    "traffic",
    "mockttp",
    "development",
    "debugging"
  ],
  "author": "Santiago Garza",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@mongodb-js/zstd": "^2.0.1",
    "better-sqlite3": "^11.10.0",
    "mockttp": "^3.17.1",
    "node-forge": "^1.3.1",
    "uuid": "^11.1.0",
    "ws": "^8.18.2",
    "zod": "^3.25.46"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.29",
    "@types/node-forge": "^1.3.11",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
